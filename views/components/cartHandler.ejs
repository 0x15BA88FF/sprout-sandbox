<script>
    const addToCart = async (productId) => {
        try {
            const response = await fetch(`/cart/${ productId }`, { method: 'POST', headers: { 'Content-Type': 'application/json' } });
            window.navigation.reload()
        }
        catch (error) { console.error(error) }
    };
    const removeFromCart = async (productId) => {
        try {
            const response = await fetch(`/cart/${ productId }`, { method: 'DELETE', headers: { 'Content-Type': 'application/json' } });
            window.navigation.reload()
        }
        catch (error) { console.error(error) }
    }
</script>
