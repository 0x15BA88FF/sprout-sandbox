<a href="/sell/<%= product._id %>">
    <div class="w-full flex items-center gap-2 justify-between">
        <div class="main w-4/5 flex items-center gap-2">
            <img class="thumbnail-md rounded-lg" src="<%= product.images[0] %>" alt="<%= product.title %>">
            <div class="details w-full flex flex-col">
                <p class="font-semibold truncate text-ellipsis"><%= product.title %></p>
                <%- include('./price', { currency: product.currency, price: product.price, metric: product.metric, classes: 'price-sm' }) %>
            </div>
        </div>
    </div>
</a>